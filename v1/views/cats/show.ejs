<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Your cat: <%= cats.name %></h1>
    <div class="row justify-content-center">
        <div class="column-md-6 align-self-center text-center">
            <div id="randomcat"></div>
                <img src="<%= cats.image %>">
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="column-md-6 align-self-center text-center">
            <div class="cat-form"> <!--uitklapbaar-->
                <form method="POST" action="/cats/<%= cats._id %>/update">
                    <div class="form-group">
                        <button id="RanCat" class="btn btn-outline-primary">Update your random cat image</button>
                    </div>
                    <div class="form-group">
                        <input id="dbname" class="form-control" type="text" name="name" value="<%= cats.name %>" required>
                        <input id="dbimage" type="hidden" name="image" value="<%= cats.image %>">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>   
            </div>  
            <div class="row justify-content-center"> 
                <button id="catupdate" class="btn btn-primary">Edit</button>
                <button id="catdelete" class="btn btn-danger" onclick="location.href='/cats/<%= cats._id %>/delete'">Remove</button>
                <button id="catgoback" class="btn btn-outline-primary" onclick="location.href='/cats/home'">Go back</button> 
            </div>
        </div>
    </div>
</div>

<% include ../partials/socketio %>
